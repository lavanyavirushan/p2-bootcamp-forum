<div class="modal fade top" id="modalCookie1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true" data-backdrop="true">
    <div class="modal-dialog modal-frame modal-top modal-notify modal-info" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row d-flex justify-content-center align-items-center">
                    <p class="pt-3 pr-2">Error while filling out form.. Please check the fields</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-2">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="/images/code6.jpg" alt="login form" class="img-fluid "
                            style="border-radius: 1rem 0 0 1rem;" />
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 px-lg-4 text-black">
                            <form class="signup-form">
                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <img src="/images/bflightmode.png" style="width:100px" />
                                </div>
                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px; color: var(--d)">Sign Up for
                                    an Account</h5>

                                <div class="form-outline mb-2">
                                    <input type="text" id="fname" name="fname" required
                                        class="form-control form-control-lg">
                                    <label class="form-label" style="color: var(--d)" for="fname">First
                                        Name</label>
                                </div>

                                <div class="form-outline mb-2">
                                    <input type="text" id="lname" name="lname" required
                                        class="form-control form-control-lg">
                                    <label class="form-label" style="color: var(--d)" for="lname">Last
                                        Name</label>
                                </div>

                                <div class="form-outline mb-2">
                                    <input type="text" id="name" name="name" required
                                        class="form-control form-control-lg">
                                    <label class="form-label" style="color: var(--d)" for="name">First
                                        Name</label>
                                </div>

                                <div class="form-outline mb-2">
                                    <input type="email" id="email" name="email" required
                                        class="form-control form-control-lg">
                                    <label class="form-label" style="color: var(--d)" for="email">Email</label>
                                </div>

                                <div class="form-outline mb-2">
                                    <input type="password" id="password" name="password" required
                                        class="form-control form-control-lg">
                                    <label class="form-label" style="color: var(--d)" for="password">Password</label>
                                </div>

                                <div class="pt-1 mb-2">
                                    <button class="btn btn-lg btn-block" style="background-color:var(--d); color:white;"
                                        type="submit">Create My Account</button>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <button class="btn mb-1 class=" align-self-center""
                                        style="background-color:transparent; border:none; color:var(--d);"
                                        id="loginBtn">
                                        <a href="/login">I already have an account</a>
                                    </button>
                                    <div class="align-self-center">
                                        <a href="#!" class="small text-muted mx-1">Terms of use.</a>
                                        <a href="#!" class="small text-muted mx-1">Privacy policy</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    </card>
