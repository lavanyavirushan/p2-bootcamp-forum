<card class="card p-3">
    <form class="mb-2 signup-form">
        <div>
            <h2 class="fancy-font">Sign Up for an Account</h2>
        </div>
        <div class="d-flex flex-column align-items-center mx-auto" style="width:fit-content">
            <input class="rounded" type="text" id="fname" name="fname" placeholder=" First Name" required style="color:white"><br>
            <input class="rounded" type="text" id="lname" name="lname" placeholder=" Last Name" required><br>
            <input class="rounded" type="text" id="email" name="email" placeholder=" Email" required><br>
            <input class="rounded" type="text" id="username" name="username" placeholder=" Username" required><br>
            <input class="rounded" type="password" id="password" name="password" placeholder=" Password" required><br>
            <div class="form-buttons">
                <input class="btn btn-success" type="submit" value="Create My Account">
                <button class="btn btn-secondary registered space-from-top btn-text">I already have an account</button>
            </div>
        </div>
    </form>

</card>
<script src="./js/signup.js"></script>