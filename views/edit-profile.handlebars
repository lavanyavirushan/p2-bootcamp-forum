<h2 class="fancy-font">Edit profile</h2>
<div class="card" style="max-width: fit-content; margin-left: auto; margin-right: auto">
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row" style="justify-content: space-around;">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" id ="avatar" width="150px" src={{avatar}}><span class="font-weight-bold">{{username}}</span><span class="text-black-50"></span><span> </span></div>
            </div>
            <div class="col-md-5 border-right">
                <div class="p-3 py-5">
                    <div class="row mt-2" >
                        <div class="col-md-12"><label class="labels fancy-font"><div id="user-id" style="visibility: hidden;">{{id}}</div></label><input type="text-area"  id="username" class="form-control" placeholder="enter new username" required></div>
                        <div class="col-md-12"><label class="labels fancy-font">Message</label><textarea class="form-control" id="message" placeholder="tell the world what you think..." required></textarea></div>
                        <div class="col-md-12"><label class="labels fancy-font">Upload a profile picture</label><input class="form-control" type="file" id="formFile"></div>
                    </div>
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button save" type="button">Save Profile</button></div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/edit.js"></script>