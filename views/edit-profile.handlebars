<div class="card py-5">
  <div class="container rounded bg-white">

    <div class="row" style="justify-content: space-around;">
      <h3>Edit your profile</h2>
        <div class="col-md-3" style="background-color:var(--l); color:var(--g)">
          <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-6"
              id="avatar" width="200px" src={{avatar}}>
            <h4 class="name mt-3">{{username}}</h4>
          </div>
        </div>

        <div class="col-md-5">
          <h5 style="color:var(--d);">Update my: </h5>
          <div>
            <div class="row mt-2">

              <!-- UPDATE USERNAME -->
              <div class="row g-3 align-items-center my-1">
                <label for="username" class="col-form-label" style="color:var(--d);">Username</label>
                <input type="text" id="username" class="form-control">
              </div>

              <!-- UPDATE MESSAGE -->
              <div class="row g-3 align-items-center my-1">
                <label for="message" class="col-form-label" style="color:var(--d);">Message</label>
                <input type="text" id="message" class="form-control">
              </div>

              <!-- UPDATE PROFILE PHOTO -->
              <div class="row g-3 align-items-center">
                <div class="col-sm-3">
                  <label for="photo" class="col-form-label" style="color:var(--d);">Profile Photo</label>
                </div>
                <div class="col-sm-6 input-group">
                  <input type="file" id="formFile" class="form-control">
                  <label class="input-group-text" for="photo">Upload</label>
                </div>
              </div>
            </div>
            <div class="mt-5 text-center">
              <button class="btn profile-button save" style="background-color:var(--m); color:white;" type="button">Save
                Profile</button>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
