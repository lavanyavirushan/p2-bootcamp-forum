<a href="/post/{{post.id}}" class="list-group-item list-group-item-action list-unstyled">
<li >
    <!-- Custom content-->
    <div class="media align-items-lg-center flex-column flex-lg-row p-3">
        <div class="media-body order-2 order-lg-1">
            <div class="d-flex align-items-center justify-content-between mt-1">
            <h5 class="mt-0 font-weight-bold mb-2">{{ post.title }}</h5>
            <h6 class="font-weight-bold my-2">{{moment post.createdAt fromNow=null }}</h6>
            </div>
            <p class="font-italic text-muted mb-0 small">{{ post.description }}</p>
            <div class="d-flex align-items-center justify-content-between mt-1">
                <h6 class="font-weight-bold my-2">              
                    <img class="rounded-circle shadow-1-strong me-3"
                src="{{ post.user.avatar }}" alt="avatar" width="40"
                height="40" />
                {{ post.user.username  }}
                </h6>
                <h6 class="font-weight-bold my-2">
                    <i class="fas fa-thumbs-up me-1"></i>
                    {{ post.total_likes }}
                </h6>
            </div>
            
        </div>
    </div>
    <!-- End -->
</li>
</a>