<a href="/post/{{post.id}}" class="list-group-item list-group-item-action list-unstyled mb-4"  style="background-color:transparent; border:none" >
    <li class="d-flex flex-start">
        <!-- Custom content-->
        <div class="card w-100 shadow" style="background-color:var(--l); color:var(--g);">
            <div class="card-body p-4">
                <div>
                    <h5 class="fs-4 text" style="color:white;">{{ post.user.username }}</h5>
                    <p class="small" style="color:var(--g)">{{ moment post.createdAt fromNow=null }}</p>
                    <p class="fs-4 text" style="color:white;">{{ post.title }}</p>
                    <p>{{ post.description }}</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <h6 class="font-weight-bold my-2">
                                <i class="fas fa-thumbs-up me-1"></i>
                                {{ post.total_likes }}
                            </h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End -->
    </li>
</a>