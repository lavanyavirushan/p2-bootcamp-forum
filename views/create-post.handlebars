<div class="card single-post space-from-top">
    <div class="card-body">
        <form>
            <label for="post-title">Post Title</label>
            <input class="form-control form-control-lg" name= "post-title" type="text" placeholder="">
            <div class="form-group">
                <label for="post-content">Post Content</label>
                <textarea class="form-control" id="post-content" rows="3"></textarea>
            </div>
            <div class="buttons">
                <button type="submit" class="btn btn-primary submit-form">Submit</button>
                <select  class ="form-select fancy-font btn-text" required>
