<h2 class="fancy-font space-from-top">My Profile</h2>
<div class="card">
  <div class="card-body">
    <div class="d-flex flex-column align-items-center text-center">
      <img src={{avatar}} alt="Admin" class="rounded-circle" width="150">
      <div class="mt-3">
        <h4>{{username}}</h4>
        <p class="text-secondary mb-1">Bootcamp Student</p>
        <p class="text-muted font-size-sm">{{message}}</p>
         <a href="/edit"><button class="btn btn-primary">Edit Profile</button></a>
        <a href="/create-post"><button class="btn btn-outline-primary">Create Post</button></a>
      </div>
    </div>
  </div>
</div>

  <aside class="users-posts space-from-top space-from-left">
    <h2 class="fancy-font">My posts</h2>
    {{#each user_posts as |post|}}
      {{>profile-posts}}
    {{/each}}
  </aside>
</div> 